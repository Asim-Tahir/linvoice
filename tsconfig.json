{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "typeRoots": ["./nodu_modules/@types/", "packages/types"],
    "types": ["vite/client", "node", "@types/jest"],
    "isolatedModules": false,
    "noEmit": true,
    "jsxImportSource": "react",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@types": ["packages/types"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.tsx",
    "tests/**/*.ts",
    "src/serviceWorker.js",
    "types/**/*.ts",
    "*.ts"
  ]
}
